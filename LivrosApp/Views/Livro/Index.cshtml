@model List<LivroModel>
@{
    ViewData["Title"] = "Meus Livros";
}
<br />
<br />
<br />
<br />
<br />
<html lang="pt-br">
<div class="text-center">
      <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-dark" role="button" asp-controller="Livro" asp-action="Criar">Adicionar novo livro</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class=" btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class=" btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
       
    <br />

    <h1>Listagem dos meus livros</h1>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                        <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z" />
                        <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z" />
                    </svg>
                </th>
                <th scope="col">Nome</th>
                <th scope="col">Autor</th>
                <th scope="col">Categoria</th>
                <th scope="col">Data Publicação</th>
                <th scope="col">Status</th>


            </tr>
        </thead>
        <tbody>
          @if (Model != null && Model.Any())
          {
              foreach (LivroModel livro in Model)
              {
                 <tr>
                      <th scope="row">@livro.Id</th>
                      <td>@livro.Nome</td>
                      <td>@livro.Autor</td>
                      <td>@livro.Categoria</td>
                      <td>@livro.DataPublicacao</td>
                      <td>@livro.Status</td>
                      <td>

                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@livro.Id" asp-controller="Livro" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@livro.Id" asp-controller="Livro" asp-action="ApagarConfirmacao">Apagar</a>

                             </div>
                       </td>
                  </tr>
              }
          }
            
           
        </tbody>
    </table>
</div>
</html>