@model LivroModel
@{
    ViewData["Title"] = "Cadastro";
}
<br />
<br />
<br />
<br />
<br />
<div class="text-center">

    <h1 class="display-6">Cadastrar livro</h1>

</div>

<form asp-controller="Livro" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do livro">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="Autor">Autor</label>
        <input type="text" asp-for="Autor" class="form-control" placeholder="Digite o nome  autor do livro">
        @Html.ValidationMessageFor(x => x.Autor)

    </div>
    <br />
    <select class="form-select" asp-for="Categoria">
        <option selected>Selecione uma categoria</option>
        <option value="1">Romance</option>
        <option value="2">Auto Ajuda</option>
        <option value="3">Religioso</option>
        <option value="3">Infantil</option>
        <option value="3">Ficção</option>
    </select>
    <br />
    <select class="form-select" asp-for="Status">
        <option selected>Selecione o status</option>
        <option value="1">Concluído</option>
        <option value="2">Andamento</option>
        <option value="3">Espera</option>
    </select>
    <br />
    <div class="form-group">
        <label for="DataPublicacao">Data de Publicação</label>
        <input type="date" asp-for=DataPublicacao class="form-control" />
    </div>
           
   <br />
    <button type="submit" class="btn btn-outline-dark">Cadastrar</button>
    <a class="btn btn-outline-dark" asp-controller="Livro" asp-action="Index" role="button">Voltar</a>
</form>